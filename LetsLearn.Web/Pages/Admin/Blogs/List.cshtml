@page
@model LetsLearn.Web.Pages.Admin.Blogs.ListModel
@{
}
<div class="bg-secondary bg-opacity-10 py-3 mb-5">
    <div class="container">
        <h1>All Blog Posts</h1>
    </div>
</div>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <td>Id</td>
                <td>Heading</td>
            </tr>
        </thead>

        <tbody>
            @foreach (var blogPost in Model.BlogPosts)
            {
                <tr>
                    <td>@blogPost.Id</td>
                    <td>@blogPost.Heading</td>
                    <td><a href="/Admin/Blogs/Edit/@blogPost.Id">View and Edit<a/> </td>
                </tr>
                
            }
        </tbody>
    </table>
    
</div>
